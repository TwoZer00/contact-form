---
const { title, checked } = Astro.props;
const id = title.replace(" ", "-");
---

<!-- <div class=""> -->
<label
  for={id}
  class="w-full capitalize hover:cursor-pointer text-lg text-tgray-900 flex flex-row items-center gap-3 has-checked:bg-tgreen-200 px-4 py-2.5 border border-tgray-500 rounded"
>
  <input
    type="radio"
    name="queryt"
    id={id}
    transition:persist
    value={id}
    checked={checked}
    class="pl-2.5 h-5 aspect-square checked:accent-tgreen-600"
  />
  {title}
</label>
